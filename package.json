{
  "name": "ballast",
  "version": "0.0.1",
  "description": "Displays and keeps up specific web pages on one or more (wall-mounted) displays, with resiliancy to network and server problems.",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron ./app",
    "dev": "NODE_ENV='development' npm run start",
    "dist": "build --win --x64",
    "build-icons": "icon-gen -i assets/logo.svg -o assets/generated/ -r"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregmac/ballast.git"
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial"
  ],
  "author": "Greg MacLellean",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/gregmac/ballast/issues"
  },
  "homepage": "https://github.com/gregmac/ballast",
  "devDependencies": {
    "electron-builder": "^6.3.1",
    "electron-prebuilt": "^1.2.0",
    "icon-gen": "^1.0.5"
  },
  "build": {
    "appId": "ballast",
    "app-category-type": "public.app-category.productivity",
    "win": {
      "iconUrl": "http://eatodo.s3.amazonaws.com/icon.ico"
    }
  }
}
